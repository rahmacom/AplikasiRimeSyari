<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order_status.OrderStatusFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hgb_status_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hge_status_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vgb_status_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vge_status_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_status_pengiriman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/hge_status_pengiriman"
        app:layout_constraintEnd_toStartOf="@+id/vge_status_pengiriman"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vgb_status_pengiriman"
        app:layout_constraintTop_toBottomOf="@+id/tv_alamat_pengiriman"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_no_order_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Order #27AY9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/gd_status"
        app:layout_constraintTop_toTopOf="@+id/hgb_status_pengiriman" />

    <TextView
        android:id="@+id/tv_status_pengiriman_ket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="sedang dikirim"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_no_order_pengiriman"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_order_pengiriman" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="120dp" />

    <TextView
        android:id="@+id/tv_alamat_pengiriman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Alamat Tujuan"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/vge_status_pengiriman"
        app:layout_constraintStart_toStartOf="@+id/tv_status_pengiriman_ket"
        app:layout_constraintTop_toBottomOf="@+id/tv_status_pengiriman_ket" />

    <ImageView
        android:id="@+id/iv_status_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_status_pengiriman_ket"
        app:layout_constraintEnd_toStartOf="@+id/gd_status"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="@+id/vgb_status_pengiriman"
        app:layout_constraintTop_toTopOf="@+id/hgb_status_pengiriman"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>